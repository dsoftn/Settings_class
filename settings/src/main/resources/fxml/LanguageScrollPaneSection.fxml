<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox style="-fx-background-color: rgb(63, 63, 63);" stylesheets="@../css/ScrollPaneSection.css">
         <children>
            <Region maxHeight="20.0" minHeight="20.0" prefHeight="20.0" />
            <HBox alignment="CENTER">
               <children>
                  <Region maxWidth="10.0" minWidth="10.0" prefWidth="10.0" />
                  <Label fx:id="lblLangCode" styleClass="label-marked" text="EN">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Label>
                  <Region maxWidth="10.0" minWidth="10.0" prefWidth="10.0" />
                  <Label fx:id="lblLangName" styleClass="label-marked" text="english">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Label>
                  <Region HBox.hgrow="SOMETIMES" />
                  <Label fx:id="lblMsg" styleClass="label-msg-normal" text="Message">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Label>
                  <Region HBox.hgrow="SOMETIMES" />
                  <Label styleClass="label-normal" text="Translate from">
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </Label>
                  <ComboBox fx:id="cmbTranslateFrom" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
                  <Region maxWidth="5.0" minWidth="5.0" prefWidth="5.0" />
                  <Button fx:id="btnTranslate" mnemonicParsing="false" text="Translate" />
                  <Button fx:id="btnClose" mnemonicParsing="false" onAction="#onBtnClose" styleClass="button-graphical" text="X">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="txtValue" maxHeight="120.0" minHeight="120.0" prefHeight="120.0" wrapText="true">
               <VBox.margin>
                  <Insets top="3.0" />
               </VBox.margin>
            </TextArea>
         </children>
      </VBox>
   </children>
</VBox>
